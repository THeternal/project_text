<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
<meta
	http-equiv="X-UA-Compatible"
	content="IE=edge,chrome=1" />
<meta
	name="viewport"
	content="width=device-width, initial-scale=1, maximum-scale=1" />
<link
	rel="stylesheet"
	th:href="@{/layui/css/layui.css}"
	media="all" />

<link
	rel="stylesheet"
	href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css" />
</head>
<body class="layui-fluid">

	<div
		class="layui-row"
		style="margin-top: 30px;">
		<div class="layui-col-md4 layui-col-md-offset5">
			<label class="layui-form-label">时间：</label>
			<div class="layui-input-inline">
				<input
					type="text"
					class="layui-input param_date_start" />
			</div>
			-
			<div class="layui-input-inline">
				<input
					type="text"
					class="layui-input param_date_end" />
			</div>
		</div>
		<div class="layui-col-md1">
			<button
				class="layui-btn"
				onclick="search()">
				<i class="layui-icon">&#xe615;</i> 搜索
			</button>
		</div>
	</div>



	<div
		class="layui-row"
		style="margin-top: 10px;">
		<div class="layui-card">
			<div class="layui-card-header">
				<i
					class="fa fa-line-chart"
					aria-hidden="true"></i>&nbsp;<font
					color="#009688"
					style="font-weight: bold;">数据分析</font>
			</div>
			<div class="layui-card-body">
				<div class="layui-row">
					<div id="goods_in_day_chart"></div>
				</div>
			</div>
		</div>
	</div>


</body>
<script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js "></script>
<script
	th:src="@{/layui/layui.js}"
	charset="utf-8"></script>
<script src="https://img.hcharts.cn/highcharts/highcharts.js"></script>
<script src="https://img.hcharts.cn/highcharts/modules/exporting.js"></script>
<script src="https://img.hcharts.cn/highcharts-plugins/highcharts-zh_CN.js"></script>

<script
	type="text/javascript"
	th:inline="javascript">
	var search_url=/*[[@{/admin/goods/chart/red_purchasing_search}]]*/;
	var chart_data=/*[[${pageDate}]]*/;
	layui.use(['laydate','layer'],function(){
		var laydate=layui.laydate;
		laydate.render({
			elem : '.param_date_start',
			type : 'date'
		});
		
		laydate.render({
			elem : '.param_date_end',
			type : 'date'
		});
	});
	
	function search(){
		var paramDateStart=$(".param_date_start").val();
		var paramDateEnd=$(".param_date_end").val();
		if(Date.parse(paramDateStart)>Date.parse(paramDateEnd)){
			layer.msg('开始日期不能大于结束日期');
			return false;
		};
		
		$.ajax({
			url:search_url,
			type:'GET',
			data:{
				dateStart:paramDateStart,
				dateEnd:paramDateEnd,
				isTitle:0
			},
			success:function(res){
				init(res);
				
			}
		})
	}
	
	$(function(){
		init(chart_data);
		
	});
	
	function init(chartData){
	Highcharts.chart('goods_in_day_chart', {
		chart : {
			type : 'line'
		},
		title : {
			  text: '分析'
		},
		xAxis : {
			type:'category' 
		},
		yAxis : {
			title : {
				text : '金额'
			}
		},
		colors : [ '#009688', '#E63870', '#58E481', '#F68686', '#FFEED0' ],
		plotOptions : {
			series : {
				label : {
					connectorAllowed : false
				}
			}
		},
		series : [ {
				name : '售前红包',
				data : chartData.redBeforeMoney
			},{
				name : '售后红包',
				data : chartData.redAfterMoney
			},{
				name : '代卖佣金',
				data : chartData.purchasing
			}]
	});
	
	}
	
	
</script>

</html>